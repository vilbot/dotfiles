// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
    "hard_tabs": false,
    "soft_wrap": "prefer_line",
    "preferred_line_length": 80,
    "inlay_hints": {
        "show_other_hints": false,
        "show_value_hints": false,
        "show_type_hints": false,
        "show_parameter_hints": false,
    },
    "show_wrap_guides": true,
    "disable_ai": false,
    "agent": {
        "always_allow_tool_actions": false,
        "dock": "right",
        "model_parameters": [],
    },
    "icon_theme": "Zed (Default)",
    "rounded_selection": true,
    "cursor_blink": false,
    "vim_mode": true,
    "relative_line_numbers": "enabled",
    "ui_font_size": 16,
    "buffer_font_size": 13,
    "tab_size": 4,
    // "buffer_font_family": "Hack",
    "buffer_font_family": "Liberation Mono",
    // "buffer_font_family": "NSimSun",
    // "buffer_font_family": "Noto Sans Mono",
    // "buffer_font_family": "Source Code Pro",
    // "buffer_font_family": "Adwaita Mono",
    // "buffer_font_family": "Cascadia Mono",
    // "buffer_font_family": "JetBrainsMono Nerd Font",
    // "buffer_font_family": "SF Mono",
    // "buffer_font_family": "Iosevka",
    "theme": {
        "mode": "dark",
        "light": "Gruber Banana üçå",
        "dark": "Gruber Darker",
    },
    "languages": {
        "C": {
            "enable_language_server": true,
            "show_completion_documentation": true,
            "show_completions_on_input": true,
            "extend_comment_on_newline": false,
        },
        "C++": {
            "enable_language_server": true,
            "show_completion_documentation": true,
            "show_completions_on_input": true,
            "extend_comment_on_newline": false,
            "format_on_save": "off",
            "formatter": "language_server",
        },
        "CSharp": {
            "enable_language_server": true,
        },
        "Java": {
            "enable_language_server": true,
            "language_servers": ["jdtls"],
        },
        "Rust": {
            "enable_language_server": false,
        },
    },
    "lsp": {
        "jdtls": {
            "initialization_options": {
                "settings": {
                    "java.jdt.ls.java.home": "C:\\Program Files\\OpenJDK\\jdk-21",
                    "lombok_support": true,
                },
            },
        },
    },
}
